<h1><%= "New Purchase Order #{@purchase_order.code}" %></h1>
<br />
<%= simple_form_for(@purchase_order, url: {action: 'new'}, :html => { method: 'get', wrapper: :horizontal_form}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
		<div class="row">
			<div class="col-6">
			<%= f.association :customer, collection: Company.owned, selected: Company.owned.first %>
			<%= f.association :client %>
			<%= f.association :supplier %>
			<%= f.hidden_field :code, value: @purchase_order.code %>
			<%= f.hidden_field :project_id, value: @purchase_order.project_id %>
			</div>
	  </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Next', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', session[:return_to], class: 'btn btn-warning'  %>
  </div>
<% end %>