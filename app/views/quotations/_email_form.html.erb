<%= simple_form_for(@quotation, wrapper: :horizontal_form}) do |q| %>
  <%= q.error_notification %>

	<div class="form-group col-9">
		<%= q.fields_for :emails, @quotation.emails.new do |f| %>
			<%= f.input :to %>
			<%= f.hidden_field :from, value: @user.email %>
			<%= f.input :subject %>
			<%= f.input :body %>
			<%= f.hidden_field :attachment, value: "#{@quotation.code}.pdf" %>
			<% end %>
    <%= q.button :submit %>
  </div>
<% end %>
