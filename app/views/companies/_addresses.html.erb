<table class='table table-sm address-table'>
  <tr class = 'grey-header'>
  	<th>Addresses</th><td></td><td></td><td></td>
	<% if allow? :addresses, :new %>
		<td class='text-right'><%= link_to 'New Address', new_company_address_path(@company), id: 'new-address' %></td>
	<% else %>
		<td></td>
	<% end %>
  </tr>
  <% @company.addresses.each do |addr| %>
	  <tr>
	    <td><%= addr.name %></td>
	    <td><%= simple_format("#{addr.body}\n#{addr.post_code}") %></td>
		<td></td>
		<td></td>
		<% if allow? :addresses, :edit %>
			<td class='text-right'><%= link_to 'Edit', edit_company_address_path(@company, addr) %>
			| <%= link_to 'Remove', [@company, addr], method: :delete, data: { confirm: 'Are you sure?' }%></td>
		<% else %>
			<td></td>
		<% end %>
	  </tr>
  <% end %>
</table>