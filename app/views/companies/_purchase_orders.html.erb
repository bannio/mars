<table class='table table-sm'>
  <tr class = 'grey-header'>
    <th>Purchase Orders</th><th></th><th></th><th></th>
	<% if allow? :purchase_orders, :new %>
		<td class='text-right'><%= link_to 'New Purchase Order', setup_purchase_order_path(supplier_id: @company.id), id: 'new-purchase-order' %></td>
	<% else %>
		<td></td>
	<% end %>
  </tr>
	<% @company.offered_purchase_orders.order("id DESC").each do |purchase_order| %>
	  <tr>
		<td><%= link_to purchase_order.code, purchase_order %></td>
	  <td><%= purchase_order.name %></td>
		<td><%= number_to_currency(purchase_order.total) %></td>
		<td><%= purchase_order.status %></td>
		<td></td>
	  </tr>
  <% end %>
</table>