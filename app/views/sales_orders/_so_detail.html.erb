<table class='table table-sm table-hover' id='sortable-table'>
	<thead>
	<tr>
		<th>Category</th>
		<th>Item</th>
		<th>Specification</th>
		<th class="text-right">Quantity</th>
		<th class="text-right">Unit Price</th>
		<th class="text-right">Total</th>
		<th class="text-right">PO Qty</th>
		<th></th>
	</tr>
	</thead>
	<tbody id="sales-order-lines" data-update-url="<%= sort_sales_order_lines_url %>">
	<% @sales_order.sales_order_lines.each do |line| %>
	<% if line.persisted? %>
		<%= content_tag_for :tr, line do %>
				<td width="120"><%= line.category %></td>
				<td width="120"><%= line.name %></td>
				<td width="350"><%= line.description %></td>
				<td class="text-right"><%= line.quantity %></td>
				<td class="text-right"><%= number_to_currency(line.unit_price) %></td>
				<td class="text-right"><%= number_to_currency(line.total) %></td>
				<td class="text-right"><%= line.purchase_order_lines.sum(:quantity) %> </td>
				<td class="text-right">
				<% if @sales_order.open? %>
				<% if allow? :sales_order_lines, :edit %>
					<i class="material-icons handle">reorder</i>
					<%= link_to material_icon(:create), edit_sales_order_line_path(line) %>
					<%= link_to material_icon('content_copy'), copy_sales_order_line_path(@sales_order, line), method: :post, data: { confirm: 'Copy this line?' } %>
	 				<%= link_to material_icon(:delete), sales_order_line_path(line), method: :delete, data: { confirm: 'Delete line - are you sure?' }, id: "Remove" %>
				<% end %>
				<% end %>
				</td>
			<% end %>
		<% end %>
	<% end %>
	</tbody>
</table>