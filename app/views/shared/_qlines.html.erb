<fieldset id="new-line-form">
  <div class="form-group row">
    <div class="col-2">
    <%= f.text_field :category, placeholder: 'category', class: 'form-control' %>
    </div>
    <div class="col-2">
    <%= f.text_field :name, placeholder: 'item' ,class: 'form-control'%>
    </div>
    <div class="col-3">
    <%= f.text_area :description, placeholder: 'specification',class: 'form-control',rows: 1 %>
    </div>
    <div class="col-2">
    <%= f.text_field :quantity, placeholder: 'quantity',class: 'form-control' %>
    </div>
    <div class="col-2">
    <%= f.text_field :unit_price, placeholder: 'unit price',class: 'form-control' %>
    </div>
    <div class="col-1">
    <%= f.submit 'Add', class: 'btn btn-primary' %>
    </div>
  </div>
</fieldset>