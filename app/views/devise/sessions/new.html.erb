<h2>Login</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), wrapper: :horizontal_form) do |f| %>
  <div class="form-group col-6">
	<%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <div class='offset-4'>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>
    </div>
    <%= f.button :submit, "Login", class: "btn btn-primary offset-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
