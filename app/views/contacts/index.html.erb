<h1 id="contacts-index-page">Contacts</h1>

<% if allow? :contacts, :new %>
	<%= link_to 'New Contact via Companies', companies_path, class: "float-right" %>
<% end %>

<%= form_tag contacts_path, method: 'get', class: "navbar-search pull-left", id: "contacts_search" do %>
	<%= text_field_tag :search, params[:search], class: "search-query", placeholder: 'Search', autofocus: "autofocus" %>
	<%= submit_tag "Search", name: nil, class: "invisible" %>
<% end %>

<br><br>
<div id="contacts"><%= render 'contacts' %></div>

<%= paginate @contacts %>

<% if allow? :contacts, :new %>
	<%= link_to 'New Contact via Companies', companies_path %>
<% end %>

