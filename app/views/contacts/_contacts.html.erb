<table class="table table-sm table-hover">
  <tr>
    <th>Name</th>
    <th>Job Title</th>
		<th>Company</th>
		<th>Telephone</th>
		<th>Email</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr title="Click to view Contact details" class="rowlink" data-rowlink="<%= company_contact_path(contact.company, contact) %>">
    <td><%= contact.name %></td>
		<td><%= contact.job_title %></td>
		<td><%= contact.company.name %></td>
		<td><%= contact.telephone %></td>
		<td><%= mail_to contact.email %></td>
	 </tr>
<% end %>
</table>