<h1 id="projects-index-page">Projects</h1>
<% @title = "MARS - projects"%>

<% if allow? :projects, :new %>
	<%= link_to 'New Project', new_project_path, class: "btn btn-primary float-right" %>
<% end %>

<%= form_tag projects_path, method: 'get', class: "navbar-search pull-left", id: "projects_search" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
	<%= text_field_tag :search, params[:search], class: "search-query", placeholder: 'Search Name', autofocus: "autofocus" %>
	<%= submit_tag "Search", name: nil, class: "invisible" %>
<% end %>

<br><br>
<div id="projects"><%= render 'projects' %></div>

<%= paginate @projects %>

<% if allow? :projects, :new %>
	<%= link_to 'New Project', new_project_path %>
<% end %>
