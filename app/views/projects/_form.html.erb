<%= simple_form_for @project, wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  <div class="col-6">
			<% if allow_param? :project, :code %>
		    	<%= f.input :code, input_html: { readonly: "readonly" } %>
			<% end %>
			<% if allow_param? :project, :name %>
		    	<%= f.input :name, placeholder: "Project name" %>
			<% end %>
			<% if allow_param? :project, :company_id %>
		    	<%= f.association :company %>
			<% end %>
			<% if allow_param? :project, :status %>
				<%= f.input :status, placeholder: "new", input_html: { readonly: "readonly" } %>
			<% end %>
			<% if allow_param? :project, :start_date %>
		    	<%= f.input :start_date, as: :string, input_html: {class: 'date_picker'} %>
			<% end %>
			<% if allow_param? :project, :end_date %>
		    	<%= f.input :end_date, as: :string, input_html: {class: 'date_picker'} %>
			<% end %>
			<% if allow_param? :project, :completion_date %>
		    	<%= f.input :completion_date, as: :string, input_html: {class: 'date_picker'} %>
			<% end %>

			<% if allow_param? :project, :value %>
		    	<%= f.input :value %>
			<% end %>

			<% if allow_param? :project, :notes %>
		    	<%= f.input :notes, input_html: {rows: 6} %>
			<% end %>
			<%= f.button :submit, class: "btn btn-primary offset-4" %>
	</div>
<% end %>
